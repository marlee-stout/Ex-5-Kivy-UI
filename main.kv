<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    Slider:
        id: slider
        text: "Position"
        orientation: "horizontal"
        y: root.height * 0.25
        color: 0.6, 0.9, 0.4, 1
        min: 0
        max: 100
        step: 1

    Label:
        text: "Slider: " + str(slider.value)
        color: 0.6, 0.4, 0.8, 1
        x: root.width * -0.21
        y: root.height * 0.2
        bold: True

    DPEAButton:
        id: toggle_button
        text: "Off" if self.state == "normal" else "On"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1

    DPEAButton:
        id: counter_button
        text: "Counter: " + root.string_value
        size: 250, 100
        x: root.width * 0.4
        y: root.height * 0.25
        color: 1, 0, 0, 1
        on_press: root.counter()

    DPEAButton:
        id: motor_button
        text: "Motor"
        size: 150, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.motor_switch()

    Label:
        text: "Motor " + root.motor_value
        x: root.width * -0.21
        y: root.height * -0.03
        color: 1, 0, 0, 1
        bold: True

    ImageButton:
        id: screen_two_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.change_screens()
