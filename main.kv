<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: toggle_button
        text: "Off" if self.state == "normal" else "On"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        #on_press: root.pressed()

    DPEAButton:
        id: counter_button
        text: "Counter: " + root.string_value
        size: 250, 100
        x: root.width * 0.475
        y: root.height * 0.25
        color: 1, 0, 0, 1
        on_press: root.counter()

    DPEAButton:
        id: motor_button
        text: "0"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1

    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.pressed()