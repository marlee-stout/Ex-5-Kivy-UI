<ScreenTwo>
    name: "screen_two"
    on_enter: root.start_joy_thread()

    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: go_back_button
        text: "Go back to main screen"
        color: 0.8, 0.3, 0.7, 1
        size: 500, 100
        x: root.width * 0.3
        y: root.height * 0.5
        on_press: root.go_back()

    DPEAButton:
        id: animate_button
        text: "Click me!"
        color: 0.6, 0.3, 0.7, 1
        size: 200, 100
        x: root.width * 0.7
        y: root.height * 0.8
        on_press: root.animate()

    Label:
        id: joy_button
        text: "Button 0: " + str(root.button_state)
        color: 1, 0, 0, 1
        x: root.width * 0.25
        y: root.height * -0.2
        bold: True

    Label:
        id: joystick
        center_x: self.width/2
        center_y: self.height/2
        text: "x: "
        color: 0.7, 0.23, 0.34, 1
        bold: True
        x: 0
        y: 0
        step: 1

